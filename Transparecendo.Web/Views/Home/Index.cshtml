@{
    ViewData["Title"] = "Home Page";
}

<script type="text/javascript">
    $(document).ready(function () {
    });

    function toLocaleString(value) {
        return Intl.NumberFormat('pt-br', { style: 'currency', currency: 'BRL' }).format(value).toString();
    }

    function formatValueByTerm(id, value) {
        document.getElementById(id).innerHTML = toLocaleString(value);
    }
</script>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="h-100">
                    <div class="row mb-3 pb-1">
                        <div class="col-12">
                            <div class="d-flex align-items-lg-center flex-lg-row flex-column">
                                <div class="flex-grow-1">
                                    <h4 class="fs-16 mb-1">Good Morning, Anna!</h4>
                                    <p class="text-muted mb-0">
                                        Here's what's happening with your store
                                        today.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row row-cols-xxl-3 row-cols-lg-3 row-cols-1">
                        @foreach (var values in ViewBag.ExpenseByTerm)
                        {
                            <div class="col">
                                <div class="card card-body">
                                    <div class="d-flex mb-4 align-items-center">
                                        <div class="flex-grow-1 ms-2">
                                            <h5 class="card-title mb-1">@values.NomePresidente</h5>
                                            <p class="text-muted mb-0">@values.Mandato</p>
                                            <h6 class="mb-1">
                                                <span id="@values.Ordem">
                                                    <script>
                                                        formatValueByTerm(@values.Ordem, @values.Valor);
                                                    </script>
                                                </span>
                                            </h6>
                                        </div>
                                        <div class="flex-shrink-0">
                                            <img src="@values.UrlImagem" alt="" class="avatar-sm rounded avatar-lx" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
